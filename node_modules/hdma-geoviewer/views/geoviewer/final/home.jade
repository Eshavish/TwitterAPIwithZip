doctype html
html
  head
    meta(charset="UTF-8")
    title GeoViewer !{version} || HDMA, SDSU
    meta(content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", name="viewport")
    link(rel="shortcut icon" type="image/x-icon" href="images/favicon.ico")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")
    style a:hover{text-decoration:none; }
  body(style="text-align:center; ")
  h2 GeoViewer
  p
  div.row
    each area in areas
      div.col-xs-6.col-md-3.col-lg-3(style='text-align:center;')
        a.thumbnail(href=area.area)
          h3=area.area
          p BBOX: 
            span=area.bbox
          p Keyword:
            span=area.keyword || "N/A"
          p Start Date:
            span=area.startDate.toISOString()
          p End Date:
            span=area.endDate.toISOString()
